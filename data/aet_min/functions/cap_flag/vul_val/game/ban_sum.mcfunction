# Summons a <color> banner on an interval if there's no existing <color> banners and no one's currently captured a <color> banner
execute unless entity @e[predicate=aet_min:cap_flag/vul_val/ban/blue] unless entity @a[predicate=aet_min:cap_flag/vul_val/carry/blue] run summon item 575 76 1488 {Item: {id: "blue_banner", tag: {id: "CapFlagBlue", BlockEntityTag: {Patterns: [{Pattern: cs, Color: 0}, {Pattern: tt, Color: 0}, {Pattern: cbo, Color: 11}, {Pattern: bo, Color: 11}, {Pattern: bt, Color: 0}]}}, Count: 1}}
execute unless entity @e[predicate=aet_min:cap_flag/vul_val/ban/red] unless entity @a[predicate=aet_min:cap_flag/vul_val/carry/red] run summon item 575 68 1254 {Item: {id: "red_banner", tag: {id: "CapFlagRed", BlockEntityTag: {Patterns: [{Pattern: cs, Color: 0}, {Pattern: tt, Color: 0}, {Pattern: cbo, Color: 14}, {Pattern: bo, Color: 14}, {Pattern: bt, Color: 0}]}}, Count: 1}}